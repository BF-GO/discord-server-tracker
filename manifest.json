{
	"manifest_version": 3,
	"name": "Discord Server Tracker",
	"version": "2.4.6",
	"description": "Server Tracker is a handy browser extension that helps you track servers on server-discord.com and myserver.gg. It allows you to save visit history, count clicks, and quickly find the servers you need.",
	"permissions": ["storage", "activeTab", "scripting"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["https://server-discord.com/*", "https://myserver.gg/*"],
			"js": ["content.js"],
			"css": ["styles.css"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
